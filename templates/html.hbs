<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>{{fontName}}</title>
	<style>
		body {
			font-family: sans-serif;
			margin: 0;
			padding: 10px 20px;
		}

		.preview {
			line-height: 2em;
		}

		.preview__icon, pre {
			display: inline-block;
			text-align: center;
		}

		{{{baseSelector}}} {
			display: inline-block;
			font-size: 2rem;
		}

		{{{styles}}}
	</style>
</head>
<body>
	<h1>{{fontName}}</h1>
	{{#each names}}
	<div class="preview">
		<span class="preview__icon">
			<span class="{{../classPrefix}}{{this}}"></span>
			<span>{{this}}</span>
		</span>
		<pre>.{{../classPrefix}}{{this}}</pre>
	</div>
	{{/each}}
</body>
</html>
